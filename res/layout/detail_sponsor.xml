<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:visibility="visible"
    >
    <ScrollView
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:visibility="visible"
        >

        <RelativeLayout
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:visibility="visible"
            >

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/iv_sponsor_det"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="32dp"
        android:src="@drawable/gambhir" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Gambhir Opticals"
        android:id="@+id/tv_title_sponsor"
        android:layout_marginTop="32dp"
        android:layout_below="@+id/sponsor_image_view"
        android:layout_centerHorizontal="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/gambhir_details"
                android:id="@+id/tv_sponsor_detail"
                android:padding="12dp"
                android:layout_below="@+id/sponsor_title"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true" />

        </RelativeLayout>
    </ScrollView>


</RelativeLayout>